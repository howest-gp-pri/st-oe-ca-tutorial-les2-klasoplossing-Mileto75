@model Pri.Ca.Web.ViewModels.GamesIndexViewModel
<div class="row">
    <div class="col col-lg-6 mx-auto">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var game in Model.Games)
                { 
                    <tr>
                        <td>
                            @game.Value
                        </td>
                        <td>
                            <a asp-controller="Games"
                               asp-action="Info"
                               asp-route-id="@game.Id"
                               class="btn btn-outline-info">Info</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>