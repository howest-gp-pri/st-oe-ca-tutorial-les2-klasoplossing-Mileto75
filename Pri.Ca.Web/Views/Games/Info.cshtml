@model GamesInfoViewModel
@{
    ViewData["Title"] = "Info";
}
<div class="row">
    <div class="col col-lg-3 mx-auto">
        <div class="card" style="width: 18rem;">
            <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
            <img src="https://placehold.co/600x400/000000/FFFFFF/png" class="card-img-top" alt="@Model.Value">
            <div class="card-body">
                <h5 class="card-title">@Model.Value</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Publisher.Value</h6>
                <p class="card-text">@Model.Description</p>
                @foreach(var genre in Model.Genres)
                { 
                    <h6 class="card-subtitle mb-2 text-muted">@genre.Value</h6>
                }
                <a asp-controller="Games"
                   asp-action="Index"
                   class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>

